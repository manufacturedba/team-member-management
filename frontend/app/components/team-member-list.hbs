<div>
    <LinkTo @route="add">Add new team member</LinkTo>
    <h2>Team members</h2>
    <span data-test-member-count>You have {{@members.length}} team members.</span>
    <hr />
    {{#each @members as |member|}}
    <li data-test-member-name>
        {{member.first_name}} {{member.last_name}}
        {{#if (this.isAdmin member)}}
        ({{member.role}})
        {{/if}}
    </li>
    <li data-test-member-phone-number>{{member.phone_number}}</li>
    <li data-test-member-email>{{member.email}}</li>
    <hr />
    {{/each}}
</div>